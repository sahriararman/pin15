{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./temp-sitemap-build",
    "rootDir": ".",
    "declaration": false,
    "sourceMap": false
  },
  "include": [
    "scripts/generate-sitemap.ts",
    "src/data/**/*.ts",
    "src/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "temp-sitemap-build"
  ]
}