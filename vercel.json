{
  "functions": {
    "api/**/*.ts": {
      "runtime": "nodejs@20.x",
      "includeFiles": ["dist/api/**/*"]
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ],
  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["api/**/*"],
        "distDir": "dist/api"
      }
    }
  ]
}
